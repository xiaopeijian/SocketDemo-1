<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450">
    <Grid>
        <Button x:Name="btnSendMsg" Content="发送消息" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="342,372,0,0" Click="btnSendMsg_Click"/>
        <TextBox x:Name="txtLog" HorizontalAlignment="Left" Height="152" TextWrapping="Wrap" VerticalAlignment="Top" Width="385" Margin="32,73,0,0"/>
        <TextBox x:Name="txtServer" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="192.168.0.102" VerticalAlignment="Top" Width="120" Margin="32,24,0,0"/>
        <TextBox x:Name="txtPort" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="50000" VerticalAlignment="Top" Width="50" Margin="175,24,0,0"/>
        <TextBox x:Name="txtSendMsg" HorizontalAlignment="Left" Height="97" TextWrapping="Wrap" VerticalAlignment="Top" Width="385" Margin="32,254,0,0"/>
        <Button x:Name="btnConnect" Content="连接" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="342,24,0,0" Click="btnConnect_Click"/>

    </Grid>
</Window>
